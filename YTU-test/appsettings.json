{
    "Logging": {
        "LogLevel": {
            "Default": "None"
            
        }
    },

    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },

        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log-.txt",
                    "rollingInterval": "Day",
                    "shared": true
                }
            }
        ],
        "Enrich": [ "FromLogContext"]

    },

    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=localhost;Database=YTU-Test-DB;Trusted_Connection=True;TrustServerCertificate=true;"
    }
}
